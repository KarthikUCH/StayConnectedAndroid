<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:colorBackground">@color/color_primary</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:textColorSecondary">@color/color_white</item>
    </style>

    <!-- App Theme-->
    <style name="AppTheme" parent="AppTheme.Base"></style>


    <!--Text Input Layout Theme-->
    <style name="AppTextInputLayoutTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/color_grey</item>
        <item name="android:textColorHint">@color/color_white</item>
    </style>


    <!--Edit Text Theme-->
    <style name="AppEditTextTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_accent</item>
        <item name="colorControlActivated">@color/color_accent</item>
        <item name="colorControlHighlight">@color/color_accent</item>
    </style>

</resources>
